# RustFS Configuration
RUSTFS_ENDPOINT_URL=http://rustfs:9000
RUSTFS_REGION=us-east-1
RUSTFS_ACCESS_KEY_ID=rustfsadmin
RUSTFS_SECRET_ACCESS_KEY=rustfsadmin
RUSTFS_BUCKET=music-blobs

# Service Configuration
RUST_LOG=info
HTTP_HOST=127.0.0.1
HTTP_PORT=3030

# Multipart Upload Configuration
MUSIC_MAX_FILE_SIZE_MB=200
MUSIC_MAX_TOTAL_SIZE_MB=500
MUSIC_ALLOWED_TYPES=audio/mpeg,audio/wav,audio/flac,audio/aac,audio/ogg
MUSIC_INCLUDE_METADATA=true
MUSIC_FILE_ENCODING=base64

